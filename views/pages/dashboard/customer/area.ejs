<%- include('../../../partials/head.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs') %>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-11">
                    <div class="card card-body my-5">
                        <div class="text-muted" style="margin: right;">
                            <a href="/dashboard/newCustomer" class="btn btn-success btn-sm mb-4">Create New Customer</a>
                        </div>

                        <h4 class="mt-3 mb-4">
                            <%= title.split('|')[0] %>
                        </h4>

                        <% if(customer.length === 0){ %>
                            <div class="text-center text-muted">
                                <p>There is no area available rigth now</p>
                            </div>
                        <% }else{ %>
                            <% let id = 1 %>
                            <div style="overflow-x:auto;">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Area</th>
                                            <th>Tagda</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let area = []  %>
                                        <% for(i = 0; i < customer.length; i++){ %>
                                            <% area[i] = customer[i].area %>
                                        <% } %>
                                        <% const uniqueArea = area.filter((x, i, a) => a.indexOf(x) == i) %>

                                        <% for (let c of uniqueArea){ %>
                                            <div class="col-sm-3" style=" width: 200px;">
                                                <tr scope="row">
                                                    <th scope="row"><%= id %></th>
                                                    <td><%= c %></td>
                                                    <td><a href="/dashboard/tagda/<%= c %>" target="_blank" >New Tagda</a></td>
                                                    <td><a href="/dashboard/customer/<%= c %>" target="_blank" >details</a></td>
                                                    <% id++ %>
                                                </tr>
                                            </div>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/footer.ejs') %>
</body>
</html>