<%- include('../../partials/head.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../partials/sidebar.ejs') %>
            </div>

            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-11">
                        <div class="card card-body my-5">
                            <h4 class="mt-3 mb-3">
                                <%= title.split('|')[0] %>
                            </h4>

                            <form action="/dashboard/productRecieve" method="POST">
                                
                                <div class="form-group">
                                    <label for="customerName" class="mt-3">Customer Name</label>
                                    <select class="form-control <%= errors.customerName ? 'is-invalid' : '' %>" id="customerName" name="customerName">
                                        <option></option>
                                        <% for(let c of customer){ %>
                                            <option><%= c.name %></option>
                                        <% } %>
                                    </select>
                                    <div class="invalid-feedback">
                                        <%= errors.customerName %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="productName" class="mt-3">Product</label>
                                    <select class="form-control <%= errors.productName ? 'is-invalid' : '' %>" id="productName" name="productName">
                                        <option></option>
                                        <% for(let r of riceStock){ %>
                                            <option><%= r.name %></option>
                                        <% } %>
                                        <% for(let o of otherStock){ %>
                                            <option><%= o.name %></option>
                                        <% } %>
                                        <option>onCash</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        <%= errors.productName %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="quantity" class="mt-3">Quantity</label>
                                    <input type="text" class="form-control <%= errors.quantity ? 'is-invalid' : '' %>"
                                        name="quantity" id="quantity">
                                    <div class="invalid-feedback">
                                        <%= errors.quantity %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="price" class="mt-3">Price</label>
                                    <input type="text" class="form-control <%= errors.price ? 'is-invalid' : '' %>"
                                        name="price" id="price">
                                    <div class="invalid-feedback">
                                        <%= errors.price %>
                                    </div>
                                </div>

                                <input type="submit" value="Recieve Product" class="btn btn-success btn-sm mt-4 mb-3">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <%- include('../../partials/footer.ejs') %>
    </body>
</html>