<%- include('../../partials/head.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-11">
                    <div class="card card-body my-5">
                        <h4 class="mt-3 mb-4">
                            <%= title.split('|')[0] %>
                        </h4>

                        <form action="/dashboard/sell" method="POST">

                            <div class="transaction-form">

                                <div class="form-group">
                                    <label for="name" class="mt-3">Customer Name</label>
                                    <select class="form-control <%= errors.name ? 'is-invalid' : '' %>" id="name" name="name">
                                        <option></option>
                                        <% for(let c of customer){ %>
                                            <option><%= c.name  %></option>
                                        <% } %>
                                    </select>

                                    <div class="invalid-feedback">
                                        <%= errors.name %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="debit" class="mt-3">Debit</label>
                                    <input 
                                        type="text" 
                                        class="form-control text-danger <%= errors.debit ? 'is-invalid' : '' %>"
                                        name="debit" 
                                        id="debit"
                                    >
                                    <div class="invalid-feedback">
                                        <%= errors.debit %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="profit" class="mt-3">profit</label>
                                    <input 
                                        type="text" 
                                        class="form-control"
                                        name="profit" 
                                        id="profit"
                                    >
                                    <div class="invalid-feedback">
                                        <%= errors.debit %>
                                    </div>
                                </div>

                            </div>

                            <input type="submit" value="Add Sell" class="btn btn-success btn-sm mt-4 mb-3">
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>
</body>
</html>