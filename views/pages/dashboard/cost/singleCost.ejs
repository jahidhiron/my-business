<%- include('../../../partials/head.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../../partials/sidebar.ejs') %>
            </div>

            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-11">
                        <div class="card card-body my-5">

                            <div class="card card-body m-3 description">

                                <div class="m-2">
                                    <span>Name: </span>
                                    <span>
                                        <%= cost.name %>
                                    </span>
                                </div>

                                <div class="m-2">
                                    <span>Total Cost: </span>
                                    <span>
                                        <%= cost.totalCost %>
                                    </span>
                                </div>


                                <div class="m-2">
                                    <button class="mt-3 mr-3 btn btn-sm btn-success" id="more-details">More Details</button>
                                </div>

                                <div class="transactions m-2" id="transactions">
                                    <h4 class="text-center mt-5">Create New Transactions</h4>
                                    <hr>

                                    <form action="/dashboard/singleCost/<%= cost._id %>" method="POST">

                                        <div class="transaction-form">

                                            <div class="form-group">
                                                <label for="dailyCost" class="mt-3">Cost</label>
                                                <input 
                                                    type="text" 
                                                    class="form-control <%= errors.dailyCost ? 'is-invalid' : '' %>"
                                                    name="dailyCost" 
                                                    id="dailyCost"
                                                >
                                                <div class="invalid-feedback">
                                                    <%= errors.dailyCost %>
                                                </div>
                                            </div>

                                        <div class="add-transaction mt-3">
                                            <button class="btn btn-success mt-3 btn-sm">Add Transaction</button>
                                        </div>
                                    </form>

                                    <h4 class="text-center mt-5">All Transactions</h4>
                                    <hr>

                                    <div class="all-transactions">

                                        <% if(cost.transactions.length === 0){ %>
                                            <div class="text-center text-muted">
                                                <p>There is no transactions available rigth now</p>
                                            </div>
                                        <% }else{ %>
                                            <% let id = 1 %>
                                            
                                            <div style="overflow-x:auto;">
                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>তারিখ</th>
                                                            <th>খরচ</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <div class="col-sm-3" style=" width: 200px;">
                                                            <% for (let trans of cost.transactions){ %>
                                                                <tr scope="row">
                                                                    <th scope="row"><%= id %></th>
                                                                    <td><%= trans.date %></td>
                                                                    <td><%= trans.dailyCost %></td>
                                                                    <% id++ %>
                                                                </tr>
                                                            <% } %>
                                                        </div>
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../../../partials/footer.ejs') %>    
    </body>
</html>