<%- include('../../../partials/head.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../../partials/sidebar.ejs') %>
            </div>

            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-11">
                        <div class="card card-body my-5">

                            <div class="card card-body m-3 description">

                                <div class="m-2">
                                    <span>Name: </span>
                                    <span>
                                        <%= bagStock.name %>
                                    </span>
                                </div>

                                <div class="m-2">
                                    <span>Average Price: </span>
                                    <span>
                                        <% let avgPrice = parseFloat(bagStock.avgPrice) %>
                                        <% avgPrice = avgPrice.toFixed(2) %>
                                        <%= avgPrice + ' tk' %>
                                    </span>
                                </div>

                                <div class="m-2">
                                    <span>Total Quantity: </span>
                                    <span>
                                        <%= bagStock.totalQuantity + ' bags' %>
                                    </span>
                                </div>

                                <div class="m-2">
                                    <span>Net Price: </span>
                                    <span>
                                        <% let price = parseFloat(bagStock.netPrice) %>
                                        <% price = price.toFixed(2) %>
                                        <%= price + ' tk' %>
                                    </span>
                                </div>

                                <div class="m-2">
                                    <button class="mt-3 mr-3 btn btn-sm btn-success" id="more-details">More Details</button>
                                </div>

                                <div class="transactions m-2" id="transactions">

                                    <h4 class="mt-5 text-center">All Transactions</h4>
                                    <hr>

                                    <div class="all-transactions">

                                        <% if(bagStock.transactions.length === 0){ %>
                                            <div class="text-center text-muted">
                                                <p>There is no transactions available rigth now</p>
                                            </div>
                                        <% }else{ %>
                                            <% let id = 1 %>
                                            <div style="overflow-x:auto;">
                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Quantity</th>
                                                            <th>Total Price</th>
                                                            <th>Date</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <div class="col-sm-3" style=" width: 200px;">
                                                            <% for (let trans of bagStock.transactions){ %>
                                                                <tr scope="row">
                                                                    <% let totalPrice = parseFloat(trans.totalPrice) %>
                                                                    <% totalPrice = totalPrice.toFixed(2) %>

                                                                    <th scope="row"><%= id %></th>
                                                                    <td><%= trans.quantity %></td>
                                                                    <td><%= totalPrice %></td>
                                                                    <td><%= trans.date %></td>
                                                                    <% id++ %>
                                                                </tr>
                                                            <% } %>
                                                        </div>
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../../../partials/footer.ejs') %>    
    </body>
</html>