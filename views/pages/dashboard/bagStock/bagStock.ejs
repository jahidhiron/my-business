<%- include('../../../partials/head.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs') %>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-11">
                    <div class="card card-body my-5">
                        <div class="text-muted" style="margin: right;">
                            <a href="/dashboard/newBagStock" class="btn btn-success btn-sm mb-4">Create New Bag Stock</a>
                        </div>

                        <h4 class="mt-3 mb-4">
                            <%= title.split('|')[0] %>
                        </h4>

                        <% if(bagStock.length === 0){ %>
                            <div class="text-center text-muted">
                                <p>There is no bag stock available rigth now</p>
                            </div>
                        <% }else{ %>
                            <% let id = 1 %>
                            <div style="overflow-x:auto;">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>নাম</th>
                                            <th>গড় দাম</th>
                                            <th>মোট ব্যাগ</th>
                                            <th>মোট দাম</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let b of bagStock){ %>
                                            <div class="col-sm-3" style=" width: 200px;">
                                                <% let avgPrice = parseFloat(b.avgPrice) %>
                                                <% avgPrice = avgPrice.toFixed(2) %>

                                                <% let netPrice = parseFloat(b.netPrice) %>
                                                <% netPrice = netPrice.toFixed(2) %>

                                                <tr scope="row">
                                                    <th scope="row"><%= id %></th>
                                                    <td><%= b.name %></td>
                                                    <td><%= avgPrice + ' tk' %></td>
                                                    <td><%= b.totalQuantity + ' bags' %></td>
                                                    <td><%= netPrice + ' tk' %></td>
                                                    <td><a href="/dashboard/singleBagStock/<%= b._id %>" target="_blank" >details</a></td>
                                                    <% id++ %>
                                                </tr>
                                            </div>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/footer.ejs') %>
</body>
</html>