<%- include('../../partials/head.ejs') %>

    <div class="container my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body my-5">
                    <h4 class="text-center mb-4">Create A New Account</h4>

                    <form action="/auth/signup" method="POST">
                        <div class="form-group mb-4">
                            <label for="email">Enter Your Email</label>
                            <input type="email" name="email" id="email" class="form-control <%= errors.email ? 'is-invalid': '' %>" placeholder="Email" value="<%= values.email %>">
                            <div class="invalid-feedback"><%= errors.email %></div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password">Enter Your Password</label>
                            <input type="password" name="password" id="password" class="form-control <%= errors.password ? 'is-invalid': '' %>" placeholder="Password" value="<%= values.password %>">
                            <div class="invalid-feedback"><%= errors.password %></div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control <%= errors.confirmPassword ? 'is-invalid': '' %>" placeholder="Confirm Password" value="<%= values.confirmPassword %>">
                            <div class="invalid-feedback"><%= errors.confirmPassword %></div>
                        </div>

                        <input type="submit" class="btn btn-success my-2" value="Signup">
                        <p class="mt-3">Already have Account ? <a href="/auth/login">Login</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>
        </body>

        </html>