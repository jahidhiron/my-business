<%- include('../../partials/head.ejs') %>

    <div class="container my-container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body my-5">
                    <h4 class="text-center mb-4">Login to Your Account</h4>

                    <form action="/auth/login" method="POST">
                        <div class="form-group mb-4">
                            <label for="email">Enter Your Email</label>
                            <input type="email" name="email" id="email" class="form-control <%= errors.email ? 'is-invalid': '' %>" placeholder="Email">
                            <div class="invalid-feedback"><%= errors.email %></div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="password">Enter Your Password</label>
                            <input type="password" name="password" id="password" class="form-control <%= errors.password ? 'is-invalid': '' %>" placeholder="Password">
                            <div class="invalid-feedback"><%= errors.password %></div>
                        </div>

                        <input type="submit" class="btn btn-success my-2" value="Login">
                        <p class="mt-3">Don't have Account ? <a href="/auth/signup">Signup</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>
</body>

</html>